<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="TeachingAssistant.toolbar"
               label="Ayudante Virtual">
                 <command
                  commandId="TeachingAssistant.check"
                  icon="icons/lupa.png"
                  style="push"
                  tooltip="Corregir CÃ³digo">
            </command>
                 <command
                       commandId="TeachingAssistant.update"
                       icon="icons/update.png"
                       style="push"
                       tooltip="Actualizar Ayudante">
                 </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         id="UpdateCommand"
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="ar.edu.unicen.isistan.si.teachingassistant.plugin.eclipse.handlers.CheckHandler"
            id="TeachingAssistant.check"
            name="CheckCommand">
      </command>
      <command
            defaultHandler="ar.edu.unicen.isistan.si.teachingassistant.plugin.eclipse.handlers.UpdateHandler"
            id="TeachingAssistant.update"
            name="UpdateCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="TeachingAssistant.category"
            class="ar.edu.unicen.isistan.si.teachingassistant.plugin.eclipse.views.CorrectionsView"
            icon="icons/icon.png"
            id="TeachingAssistant.corrections"
            name="Correcciones">
      </view>
      <category
            id="TeachingAssistant.category"
            name="Ayudante Virtual">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="ar.edu.unicen.isistan.si.teachingassistant.plugin.eclipse.Starter">
      </startup>
   </extension>


</plugin>
